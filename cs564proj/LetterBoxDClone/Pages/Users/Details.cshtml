@page
@model LetterBoxDClone.Pages.Users.DetailsModel

@{

	ViewData["Title"] = Model.User1.Username;
}

<body>
	<iframe name="emptyframe" id="emptyframe" style="display: none;"></iframe>

	<div class="text-left">
		<h1 class="fw-bolder mb-1">@Model.User1.Username</h1>
	</div>
	<div class="card mb-4">
		<div class="card-header">Movies You've Seen</div>
		<div class="card-body">
			<div class="row">
				<div class="col-sm-12">
					<table class="table">
						<thead>
							<tr>
								<th>
									Title
								</th>
								<th>
									Release Year
								</th>
								<th>
									Your Rating
								</th>
							</tr>
						</thead>
						<tbody>

							@foreach (var movieSeen in Model.moviesSeen)
							{
							<tr id="@movieSeen.movie.MovieId">
								<td>
									<a href="/Movies/Detail?movieId=@movieSeen.movie.MovieId">@movieSeen.movie.Title</a>
								</td>
								<td>
									@movieSeen.movie.Year
								</td>
								<td>
									<form method="post">
										<input type="number" step="0.5" min="0" max="5" name="rating" value="@movieSeen.rating.Rating"/>
										<input type="hidden" name="movieId" value="@movieSeen.movie.MovieId"/>
										<input type="hidden" name="userId" value="@Model.id"/>
										<input type="submit" class="btn btn-primary" value="Update Rating" asp-page-handler="UpdateRating"/>
									</form>
								</td>
							</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<div class="card mb-4">
		<div class="card-header">Movies You Might Like</div>
		<div class="card-body">
			<div class="row">
				<div class="col-sm-12">
					<table class="table">
						<thead>
							<tr>
								<th>
									Title
								</th>
								<th>
									Release Year
								</th>
								<th>
									Directed By
								</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var movieMightLike in Model.moviesMightLike)
							{
								<tr>
									<td>
										<a href="/Movies/Detail?movieId=@movieMightLike.movie.MovieId">@movieMightLike.movie.Title</a>
									</td>
									<td>
										@movieMightLike.movie.Year
									</td>
									<td>
										<a href="/CastCrewPage/Details/@movieMightLike.director.CastCrewId">@movieMightLike.director.Name</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</body>