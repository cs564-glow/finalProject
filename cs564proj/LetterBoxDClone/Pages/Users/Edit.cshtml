@page
@model LetterBoxDClone.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit User";
}

<h1>@ViewData["Title"]</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User1.UserId" />
            <div class="form-group">
                <label asp-for="User1.Username" class="control-label"></label>
                <input asp-for="User1.Username" class="form-control" />
                <span asp-validation-for="User1.Username" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="User1.Password" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
