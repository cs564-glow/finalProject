@page
@model LetterBoxDClone.Pages.SummaryInfo.SummaryModel

@{
    ViewData["Title"] = "Summary Info";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    @if (Model.summaryInfoDictionary != null && Model.summaryInfoDictionary.Count > 0)
    {

        <div class="card">
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">
                                Table Name
                            </th>
                            <th scope="col">
                                Total Records
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var entry in Model.summaryInfoDictionary)
                        {
                            <tr>
                                <th scope="row">@entry.Key</th>
                                <td>@entry.Value</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>