@page
@model LetterBoxDClone.Pages.MoviesModel

@{
    ViewData["Title"] = Model.Movie.Title;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
</head>

<body>
    <!-- Page content-->
    <div class="container mt-12">
        <div class="row">

            <div class="col-lg-7">
                <!-- Content -->
                <article>
                    <!-- Header-->
                    <header class="mb-4">

                        <!-- Title-->
                        <h1 class="fw-bolder mb-1">@Model.Movie.Title</h1>

                        <!-- Year and Director-->
                        <div class="text-muted fst-italic mb-2">@Model.Movie.Year by @Model.Director.Name</div>

                        <!-- Genre -->
                        <div class="row">
                            <div class="col-sm-1">
                                <span>Genres: </span>
                            </div>
                            <div class="col-sm-11">
                                <div>
                                    @foreach (var genre in Model.genres)
                                    {
                                        <a class="badge badge-light text-decoration-none link-light" href="#!">@genre.GenreName</a>
                                    }
                                </div>
                            </div>
                        </div>
                        <!-- Most popular tags -->
                        <div class="row">
                            <div class="col-sm-1">
                                <span>Tags: </span>
                            </div>
                            <div class="col-sm-11">
                                @foreach (var tag in Model.mostAppliedTags)
                                {
                                    <a class="badge badge-secondary text-decoration-none link-light" href="#!">@tag.Name</a>
                                }
                            </div>
                        </div>

                        <!-- Cast and Cre-->
                        <div class="card mb-4">
                            <div class="card-header">Cast and Crew</div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <ul class="list-group list-group-flush mb-0">
                                            @foreach (var crew in Model.CastAndCrew)
                                            {
                                                <li class="list-group-item"><a href="#!">@crew.Name</a></li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </header>

                </article>
            </div>
            <!-- Side widgets-->
            <div class="col-lg-5">

                <div class="card mb-4">
                    <div class="card-header">Relevant Links</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12"><a href="@(String.Format("https://www.imdb.com/title/tt{0}", Model.Movie.ImdbId))">See on IMDB</a></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12"><a href="@(String.Format("https://www.rottentomatoes.com/m/{0}", Model.Movie.RtId))">See on Rotten Tomatoes</a></div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">Similar Movies</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <ul class="list-group list-group-flush mb-0">
                                    @foreach (var movie in Model.similarMovies)
                                    {
                                        <li class="list-group-item"><a href="https://localhost:5001/Movies/Detail?movieID=@movie.MovieId">@movie.Title (@movie.Year)</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                    <div class="card mb-4">
                        <div class="card-header">Metadata</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-12">Produced in @Model.countryProduced</div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    Filmed at:
                                    <ul class="list-group list-group-flush mb-0">
                                        @foreach (var location in Model.FilmingLocations)
                                        {
                                            <li class="list-group-item">@location</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div

            </div>

        </div>
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>